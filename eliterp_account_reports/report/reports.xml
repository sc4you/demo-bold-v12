                                </div>
                                <div class="col-3">
                                    <strong>Fecha fin:</strong>
                                    <p t-field="o.end_date"/>
                                </div>
                                <div class="col-3">
                                    <strong>Tipo:</strong>
                                    <p t-field="o.type_report"/>
                                </div>
                                <div class="col-3" t-if="o.partner">
                                    <strong>Empresa:</strong>
                                    <p t-field="o.partner"/>
                                </div>
                            </div>

                            <t t-foreach="get_lines(o)" t-as="row">
                                <h5 class="clearfix">Facturas de:&amp;nbsp;
                                    <strong>
                                        <span t-esc="row['type']"/>
                                    </strong>
                                </h5>
                                <table class="table table-sm table-condensed">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Fecha</th>
                                            <th class="text-center">Estado</th>
                                            <th class="text-center">Vendedor</th>
                                            <th class="text-center">Empresa</th>
                                            <th class="text-center">No. Factura</th>
                                            <th class="text-center">No. Retención</th>
                                            <th class="text-center">Subtotal</th>
                                            <th class="text-center">IVA</th>
                                            <th class="text-center">Total</th>
                                            <th t-if="row['type'] != 'Compras'" class="text-center">Cobros</th>
                                            <th t-if="row['type'] == 'Compras'" class="text-center">Pagos</th>
                                            <th class="text-center">Saldo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="row['rows']" t-as="line">
                                            <t t-if="line['state'] != 'Pagada'">
                                                <t t-set="style" t-value="''"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="style" t-value="'font-weight: bold; color: #008654;'"/>

                                            </t>
                                            <tr t-att-style="style">
                                                <td>
                                                    <span t-esc="line['date']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line['state']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line['user']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line['partner']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line['invoice_number']"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line['retention']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f' % line['subtotal']"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f' % line['iva']"/>

        <!--Invoices-->
        <template id="report_invoices">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="report_title">REPORTE DE FACTURAS</t>
                    <t t-set="is_report" t-value="True"/>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>

